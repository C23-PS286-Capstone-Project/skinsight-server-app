enum Gender {
  male
  female
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  gender     Gender
  // gender     String
  // birthday   DateTime
  birthday   String
  birthplace String
  address    String    @db.Text
  email      String    @unique
  username   String    @unique
  password   String
  picture    String?   @default("default.png")
  created_at DateTime  @default(now())
  // history    Log[]
  History    History[]

  @@map("users")
}

model History {
  id                Int      @id @default(autoincrement())
  user_id           Int
  image             String?
  prediction_age    Int
  prediction_result String   @db.Text
  // date              DateTime
  created_at        DateTime @default(now())
  // timestamp         DateTime @default(now())
  // message           String
  user              User     @relation(fields: [user_id], references: [id])

  @@map("histories")
}
