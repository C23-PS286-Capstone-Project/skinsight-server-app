generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@34.143.244.43:3306/skinsight-server-app-db"
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  gender     Gender
  birthday   String
  birthplace String
  address    String    @db.Text
  email      String    @unique
  username   String    @unique
  password   String
  picture    String?   @default("default.png")
  created_at DateTime  @default(now())
  History    History[]

  @@map("users")
}

model History {
  id                Int      @id @default(autoincrement())
  user_id           Int
  image             String?
  prediction_age    Int
  prediction_result String   @db.Text
  created_at        DateTime @default(now())
  user              User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id], map: "histories_user_id_fkey")
  @@map("histories")
}

enum Gender {
  male
  female
}
